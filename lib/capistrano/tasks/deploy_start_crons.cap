namespace :deploy do

  #
  # This task starts the project crons.
  #
  desc 'Start project crons'
  task :start_crons do
    on roles(:app) do
      within current_path do
        if (fetch :enable_crons)
          execute :phing, 'project:cron:stop'
          execute :phing, 'project:cron:start'
        else
          info 'Crons disabled for target env'
          execute :phing, 'project:cron:stop'
        end
      end
    end
  end

end
